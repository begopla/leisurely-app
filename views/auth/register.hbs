<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1>Register in here</h1>

      <hr />

      <form action="/auth/register" , method="post">
        <div class="mb-3 form">
          <input
            type="text"
            class="form-control"
            id="firstName"
            name="firstName"
            placeholder=" "
          />
          <label for="firstName" class="form-label">First name</label>
        </div>

        <div class="mb-3 form">
          <input
            type="text"
            class="form-control"
            id="lastName"
            name="lastName"
            placeholder=" "
          />
          <label for="lastName" class="form-label">Last Name</label>
        </div>

        <div class="mb-3 form">
          <input
            type="text"
            class="form-control"
            id="email"
            {{! required="true" }}
            name="email"
            placeholder=" "
          />
          <label for="email" class="form-label">Email</label>
        </div>
        <div class="mb-3 form">
          <input
            type="password"
            class="form-control"
            id="password"
            {{! required="true" }}
            name="password"
            placeholder=" "
          />
          <label for="password" class="form-label">Password</label>
        </div>

        {{! render errorMessage }}
        <div>
          {{#if errorMessage}}
            <p class="error-text">{{errorMessage}}</p>
          {{/if}}
        </div>

        <button type="submit" class="btn btn-dark">Register</button>
        <a href="/" class="btn btn-dark">Go back</a>
      </form>
      <hr />
    </div>
  </div>
</div>{{!  }}

<script src="/js/features.js"></script>