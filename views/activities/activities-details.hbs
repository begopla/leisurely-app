<h1>Join us at {{activityDetails.name}}</h1>
<br />
<section style="background-color: #eee;">
<div id="activity-detail-container">
<div class="card mb-3">
  
  <img
    src="{{activityDetails.imageUrl}}"
    class="card-img-top full-width"
    alt="Activity image"
  />
  <div class="card-body">
    <div class="card-container">
      <h5 class="card-title description">{{activityDetails.description}}</h5>
     {{#if notregister}}
      <div class="register">
        <form action="/a/{{activityDetails.id}}/register" method="post">
        <button id="register-button">Register</button>
        </form>
      </div>
     {{/if}}
     {{#if userIsregistered}}
     <button
          class="btn btn-default btn-sm register-activitydetails-button"
          id="buttonLetter"
        >
          You're going
          <span class="hide">{{activityDetails._id}}</span>

          <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-calendar-check-fill" viewBox="0 0 16 16">
          <path d="M4 .5a.5.5 0 0 0-1 0V1H2a2 2 0 0 0-2 2v1h16V3a2 2 0 0 0-2-2h-1V.5a.5.5 0 0 0-1 0V1H4V.5zM16 14V5H0v9a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2zm-5.146-5.146-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L7.5 10.793l2.646-2.647a.5.5 0 0 1 .708.708z"/>
          </svg>
        </button>

     {{/if}}

      {{#if notsavedactivity}}
        <form action="/a/{{activityDetails.id}}/save" method="post">
          <button class="btn btn-default btn-sm saveButton" id="buttonLetter">

            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="25"
              height="25"
              fill="currentColor"
              class="bi bi-bookmark-heart-fill"
              viewBox="0 0 16 16"
            >
              <path
                d="M2 15.5a.5.5 0 0 0 .74.439L8 13.069l5.26 2.87A.5.5 0 0 0 14 15.5V2a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v13.5zM8 4.41c1.387-1.425 4.854 1.07 0 4.277C3.146 5.48 6.613 2.986 8 4.412z"
              ></path>
            </svg>
            Save
          </button>
        </form>
      {{/if}}

      {{#if savedactivities}}

        <button
          class="btn btn-default btn-sm saved-activitydetails-button"
          id="buttonLetter"
        >
          Saved
          <span class="hide">{{activityDetails._id}}</span>

          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="25"
            height="25"
            fill="red"
            class="bi bi-bookmark-heart-fill"
            viewBox="0 0 16 16"
          >
            <path
              d="M2 15.5a.5.5 0 0 0 .74.439L8 13.069l5.26 2.87A.5.5 0 0 0 14 15.5V2a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v13.5zM8 4.41c1.387-1.425 4.854 1.07 0 4.277C3.146 5.48 6.613 2.986 8 4.412z"
            ></path>
          </svg>

        </button>

      {{/if}}

    </div>
    <h3 id="date-text">On
      {{activityDetails.startDate}}
      to
      {{activityDetails.endDate}}</h3>
    <p class="card-text"><small
        class="text-muted"
      >{{activityDetails.location}}</small></p>

    <p class="card-text"><small class="text-muted">Organized by
        {{activityDetails.organizer}}</small></p>
    <p class="card-text"><small class="text-muted">{{activityDetails.price}}
        EUR</small></p>
       
     {{#if theUser}}

     <div class="row">
      <div class="col-2">
      <a href="/a/{{activityDetails.id}}/edit" class="btn btn-dark"> Edit </a>
      </div>
      <div class="col-1">
      {{!-- <form action="/a/{{activityDetails.id}}/delete" method="post"><button
          class="btn btn-dark"
        >Delete</button></form> --}}
        </div>
        </div>
      {{/if}}

  </div>
</div>
</div>
</section>


{{#if errorMessage}}
  <p class="error">⚠️ {{errorMessage}}</p>
{{/if}}




  <section style="background-color: #eee;">
    <div class="container my-5 py-5 set-width">
      <div class="row d-flex set-comment-width">
        <div class="col-md-10">
          <div class="card box">
          <div class="comments">
            <a href="/a/{{activityDetails._id}}/comments" class="btn btn-dark">Leave us a
              Comment</a>
          </div>
            <div class="card-body">
              
                {{#each activityDetails.comments}}
                <div class="d-flex flex-start align-items-center">
                  <div style="display: flex;
                    border-radius: 50%;
                    border: 1px solid black;
                    overflow: hidden;
                    aspect-ratio: 1;">
                <img
                  class="rounded-circle shadow-1-strong me-3"
                  src="{{user.profilePicture}}"
                  alt="profile-picture"
                  width="60"
                  style="object-fit:cover"
                />
                    
                    </div>
                <div>
                  <h6 class="fw-bold text-primary mb-1">{{user.firstName}} {{user.lastName}}</h6>
                  <p class="text-muted small mb-0">
                    {{user.createdAt}}
                  </p>
                </div>
              </div>
                <p class="mt-3 mb-4 pb-2">
                  {{comment}}
                </p>
                {{/each}}
              

