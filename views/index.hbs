<div class="welcome">
  <img
    class="welcome-image"
    src="/images/ethan-robertson-SYx3UCHZJlo-unsplash.jpg"
    alt="beach-sunglasses"
  />
  <div class="welcome-text">
    <h1>Find your next Activity, Register your Account</h1>
    <p>Discover the Unknown</p>
    <form action="/auth/register" , method="post">
      <button class="btn" href="./auth/register.hbs">Sign up now</button>
    </form>
  </div>
</div>

<h1>How about these ones?</h1>
<hr />
<div class="row row-cols-1 row-cols-md-2 g-4">

  <div class="activity-container">

    {{#each activities}}
      <div class="col">

        <div class="card" style="width: 18rem;">
          <a href="/a/{{id}}">
            <img
              src="{{imageUrl}}"
              class="card-img-top"
              alt="Activity image"
              style="height: 30%;"
            /></a>
          <div class="card-body">

            <h5 class="card-title"><a href="/a/{{id}}">{{name}}</a></h5>
            <h3 id="date-text">On {{startDate}} to {{endDate}}</h3>
            <h2 id="grey-text">{{location}}</h2>
            <h2 id="grey-text">{{price}} EUR </h2>
            <hr />
          </div>
        </div>
      </div>
    {{/each}}
  </div>

  <hr />
  <div id="map-styling">
    <div id="map" style="width: 800px; height: 600px;"></div>
  </div>

  <script
    src="https://api.mapbox.com/mapbox-gl-js/v2.8.2/mapbox-gl.js"
  ></script>
  <link
    href="https://api.mapbox.com/mapbox-gl-js/v2.8.2/mapbox-gl.css"
    rel="stylesheet"
  />
  <script
    src="https://unpkg.com/@mapbox/mapbox-sdk/umd/mapbox-sdk.min.js"
  ></script>
  <script src="/js/map.js"></script>

</div>