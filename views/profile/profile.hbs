<h1>Welcome to your profile {{currentUser.firstName}} !</h1>
<hr />

<div class="container-profile">
  <a href="/a/create" class="btn btn-dark">Create an activity</a>
  <a href="/profile/savedactivities" class="btn btn-dark">See saved activity</a>
  <a href="/profile/going" class="btn btn-dark">See activities you are going</a>
</div>
<hr />

<div class="col-width">
  <div class="row row-cols-1 row-cols-md-2 g-4">
    {{#each activities}}
      <div class="col">
        <div class="card" style="width: 18rem ;">
          <a href="/a/{{id}}">
            <img
              src="{{imageUrl}}"
              class="card-img-top"
              alt="Activity image"
              style="height: 30%;"
            /></a>
          <div class="card-body">
            <div class="card-container">
              <h5 class="card-title"><a href="/a/{{id}}">{{name}}</a></h5>
              <button
                type="button"
                class="btn btn-default btn-sm saveButton profile-activities"
                id="buttonLetter"
              >Save
                <span class="hide">{{id}}</span>

                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="22"
                  height="22"
                  fill="currentColor"
                  class="bi bi-bookmark-heart-fill"
                  viewBox="0 0 16 16"
                >
                  <path
                    d="M2 15.5a.5.5 0 0 0 .74.439L8 13.069l5.26 2.87A.5.5 0 0 0 14 15.5V2a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v13.5zM8 4.41c1.387-1.425 4.854 1.07 0 4.277C3.146 5.48 6.613 2.986 8 4.412z"
                  ></path>
                </svg>
              </button>
            </div>
            <h2 id="date-text">On {{startDate}} to {{endDate}}</h2>
            <h2 id="grey-text">{{location}}</h2>
            <h2 id="grey-text">{{price}} EUR </h2>
         
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>

<hr />

<div id="map-styling">
  <div id="map" style="width: 55vw; height: 70vh;"></div>
</div>

<footer>
  <p>About us</p>
  <p>Contact</p>
  <img src="images/facebook (1).png" alt="facebook" />
  <img src="images/instagram (1).png" alt="instagram" />
  <img src="images/linkedin (2).png" alt="linkedin" />
</footer>

<script src="https://api.mapbox.com/mapbox-gl-js/v2.8.2/mapbox-gl.js"></script>
<link
  href="https://api.mapbox.com/mapbox-gl-js/v2.8.2/mapbox-gl.css"
  rel="stylesheet"
/>
<script
  src="https://unpkg.com/@mapbox/mapbox-sdk/umd/mapbox-sdk.min.js"
></script>
<script src="/js/profile-activities.js"></script>
<script src="/js/map.js"></script>